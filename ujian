  <script>
    function calculateValue() {
      const bottlePrice = 500; // Rp per botol
      const bottles = document.getElementById("bottleInput").value;
      const total = bottles * bottlePrice;

      if (bottles > 0) {
        document.getElementById("resultText").innerText =
          `${bottles} botol = Rp ${total.toLocaleString("id-ID")}`;
      } else {
        document.getElementById("resultText").innerText = "Masukkan jumlah botol dengan benar!";
      }
    }
  </script>
